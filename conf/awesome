server{
	listen 		80;
	root 		/home/luxiushun/srv/awesoem/www;
	access_log	/home/luxiushun/srv/awesome/log/access.log;
	error_log 	/home/luxiushun/srv/awesome/log/error.log;

	# server_name awesome.sysu.edu.cn #配置域名


	# 处理静态文件

	# 处理静态资源
	location ~ ^\/static\/.*$ {
		root /home/luxiushun/srv/awesome/www;
	}

	# 动态请求转发到9000端口（gunicorn）
	location / {
		proxy_pass http://127.0.0.1:9000;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}
}